<h1>Listing invoices</h1>

<table>
  <tr>
    <th>Categoryid</th>
    <th>Number</th>
    <th>Date</th>
    <th>Goods</th>
    <th>Price</th>
    <th>Sale</th>
    <th>Total</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.categoryid %></td>
    <td><%= invoice.number %></td>
    <td><%= invoice.date %></td>
    <td><%= invoice.goods %></td>
    <td><%= invoice.price %></td>
    <td><%= invoice.sale %></td>
    <td><%= invoice.total %></td>
    <td><%= invoice.comments %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', invoice, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

