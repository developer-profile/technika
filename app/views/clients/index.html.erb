<h1>Список контрагентов</h1>

<%= form_tag clients_path, :method => 'get', :id => "clients_search" do %>

  <p>
    <%= text_field_tag :search, params[:search], :id => "keyword" %>
    <%= submit_tag "Искать", :name => nil %>
  </p>
  <div id="clients"><%= render 'clients' %></div>
<% end %>





<%= will_paginate @clients %>

<%= link_to 'Добавить контрагента', new_client_path %>
