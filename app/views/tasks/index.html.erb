<h1>Listing tasks</h1>

<table class="table table-striped">
  <tr>
    <th>Наименование</th>
    <th>Описание</th>
    <th>Крайний срок исполенения</th>
    <th>Комментарии</th>
    <th>Ответственное лицо</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.deadline %></td>
    <td><%= task.comment %></td>
    <td><%= task.person %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

